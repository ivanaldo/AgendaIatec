@model Agenda.Models.Usuario

@{
    ViewData["Title"] = "Excluir Perfil";
}

<h1>Excluir Perfil</h1>

<h3>Tem certeza que quer excluir seu perfil?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.senha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.senha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sexo)
        </dd>
    </dl>
    
    <form asp-action="ExcluirUsuario">
        <div>
            <input type="hidden" asp-for="usuarioId" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
        <br />
        <div>
            <a asp-action="Index" asp-route-id="@Model.usuarioId">Voltar</a>
        </div>
    </form>
</div>
